{
  "info": {
    "_postman_id": "9b3a3e72-03af-4d41-b2e0-2f6a72f28c91",
    "name": "Smart Task Management System APIs",
    "description": "Ready-made Postman collection for Smart Task Management System (MERN Stack Project) by Manisha Banerjee.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "https://smart-task-management-system-e4bb.vercel.app" },
    { "key": "token", "value": "Bearer <JWT_TOKEN>" }
  ],
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Manisha Banerjee\",\n  \"email\": \"manisha@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": { "raw": "{{base_url}}/auth/register" }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"manisha@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": { "raw": "{{base_url}}/auth/login" }
      }
    },
    {
      "name": "Tasks - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "{{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Complete Report\",\n  \"description\": \"Finish MERN project report\",\n  \"priority\": \"High\",\n  \"dueDate\": \"2026-01-25\"\n}"
        },
        "url": { "raw": "{{base_url}}/tasks" }
      }
    },
    {
      "name": "Tasks - Get All",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "{{token}}" }],
        "url": { "raw": "{{base_url}}/tasks" }
      }
    },
    {
      "name": "Tasks - Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "{{token}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"status\": \"Completed\"\n}" },
        "url": { "raw": "{{base_url}}/tasks/:id" }
      }
    },
    {
      "name": "Tasks - Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "{{token}}" }],
        "url": { "raw": "{{base_url}}/tasks/:id" }
      }
    }
  ]
}
